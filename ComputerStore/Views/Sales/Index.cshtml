@model IEnumerable<ComputerStore.Models.Sale>

@{ ViewData["Title"] = "Журнал продаж"; }

<h1>Журнал продаж</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Новая продажа</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Дата</th>
            <th>Продавец</th>
            <th>Сумма</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Date.ToString("g")</td>
            <td>@item.User?.Login</td>
            <td>@item.TotalAmount.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Открыть</a>
            </td>
        </tr>
}
    </tbody>
</table>