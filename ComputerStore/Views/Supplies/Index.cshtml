@model IEnumerable<ComputerStore.Models.Supply>

@{ ViewData["Title"] = "Журнал поставок"; }

<h1>Журнал поставок</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Оформить новую поставку</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Поставщик</th>
            <th>Сумма</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Date.ToString("g")</td>
            <td>@item.Supplier.Name</td>
            <td>@item.TotalAmount.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Открыть (Товары)</a>
            </td>
        </tr>
}
    </tbody>
</table>